<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Surf and Paddle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
        <header class="intro-header" style="background-image: url('@Url.Content("~/Content/waves.jpg")')">
            <div class="container">
                <div class="row">
                    <div>
                        <div class="site-heading">
                            <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
                                <div class="container-fluid">
                                    <!-- Brand and toggle get grouped for better mobile display -->
                                    <div class="navbar-header page-scroll">
                                        <a class="navbar-brand" href="~/Home/Index">Surf and Paddle Blog</a>
                                    </div>
                                    <!-- Collect the nav links, forms, and other content for toggling -->
                                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                        <ul class="nav navbar-nav navbar-right">
                                            <li>
                                                <a href="about.html">About</a>
                                            </li>
                                            <li>
                                                <a href="search.html">Search</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                            <h1>Surf and Paddle</h1>
                            <span class="subheading">An Iron Yard project</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        <div class="navbar-header page-scroll">
                            <img style="display: inline-block" class="img-responsive" id="footerImage" src="http://biztraffic.com/wp-content/uploads/2014/01/generic-logo.png" />
                        </div>
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a href="nav1.html">Nav 1</a>
                                </li>
                                <li>
                                    <a href="nav2.html">Nav 2</a>
                                </li>
                                <li>
                                    <a href="nav3.html">Jav 3</a>
                                </li>
                                <li>
                                    <a href="nav4.html">Nav 4</a>
                                </li>
                            </ul>
                        </div>
                        <p style="display: inline-block">IronYard copy right. All rights reserved.</p>
                        <!-- /.navbar-collapse -->
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
