@model IEnumerable<WebApplication1.Models.Article>

@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/Blog_Layout.cshtml";
}







<div id="main-text">
    <div class="col-sm-12 col-md-6 col-lg-8">
        <h1>
            @ViewBag.Article1.Headline
        </h1>
        <div id="byline">
            <img src="~/Content/assets/mike.jpg" /> <span id="name">@ViewBag.Article1.Author</span> on <span id="date">@ViewBag.Article1.Date</span>
        </div>
        <div>
            <!--Main Text-->
            @ViewBag.Article1.Text
        </div>
        <div class="hide-when-small">
            <button type="button" class="btn btn-primary btn-lg">
                <span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span> Read Comments
            </button>
            <button type="button" class="btn btn-primary btn-lg">
                <span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span> Read Later
            </button>
            <button type="button" class="btn btn-primary btn-lg">
                <span class="glyphicon glyphicon-share" aria-hidden="true"></span> Share This Post
            </button>
        </div>
        <div class="hide-when-large">
            <button type="button" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
            </button>
        </div>   
    </div>
    <div id="sidebar" class="col-sm-12 col-md-6 col-lg-4">
        <div id="author-info">
            <img src="@ViewBag.Ad1.AuthorPicture" />
            <p>@ViewBag.Ad1.Author</p>
            <ul>
                <li><a href="http://www.twitter.com">Twitter</a></li>
                <li><a href="http://www.facebook.com">Facebook</a></li>
                <li><a href="http://www.instagram.com">Instagram</a></li>
            </ul>
        </div>
        <article>
            <!--sidebar article-->
            <!--sidebar article author picture-->
            <!--sidebar article author social media menu-->
            <!--sidebar article ad picture-->
            <figure>
                <img src="@ViewBag.Ad1.Picture" />
                <figcaption class="pull-right"><a href="http://www.google.com">ABOUT THIS AD</a></figcaption>
            </figure>
            <!--sidebar article ad picture caption link-->
            <!--sidebar article headline-->
            <h4>@ViewBag.Ad1.Headline</h4>
            <!--sidebar article text-->
            <p>@ViewBag.Ad1.Text</p>
        </article><!--end sidebar article-->
    </div>
</div>
<div id="separator">
</div>
<!--image of horizontal bar to separate sections-->


<div id="popular-posts">
    <h2>MOST POPULAR POSTS</h2><!--popular posts headline-->
@foreach (var item in Model)
{

    <!--popular posts sections-->
   
    <a href="@Url.Action("Details", new { id = item.Id } )">
        <div class="col-sm-12 col-md-6 col-lg-3" style="background-image: url('@Html.DisplayFor(modelItem => item.Picture)'); background-size: cover; background-position:center; height:20em;">
            <!--popular post 1 section-->
            <!--popular post 1 image-->
            <!--popular post 1 text-->
            <!--popular post 1 link-->
            <div class="overlay">
                @Html.DisplayFor(modelItem => item.Headline)

            </div>

        </div>
    </a><!--end popular post 1 section-->
    }
   
</div><!--end popular posts section-->



